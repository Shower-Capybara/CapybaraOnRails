<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.StationManager.app.storage.database.dto">

    <class name="Entrance" table="hall_entrances">

        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <many-to-one name="hall" class="com.StationManager.app.storage.database.dto.HallDTO" column="hall_id"/>
        <property name="index" column="index" type="integer"/>
        <property name="segment" column="segment"
                  type="converted::com.StationManager.app.storage.database.converters.SegmentConverter"/>

    </class>
</hibernate-mapping>